                            tension: 0.3,
                            fill: true
                        },
                        {
                            label: 'With LearnLens',
                            data: [2, 4, 7, 9, 11, 13, 15, 17],
                            backgroundColor: 'rgba(79, 70, 229, 0.2)',
                            borderColor: 'rgba(79, 70, 229, 1)',
                            borderWidth: 2,
                            tension: 0.3,
                            fill: true
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + context.raw + ' interests discovered';
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Cumulative Interests Discovered'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Time Period'
                            }
                        }
                    }
                }
            });
            
            // Activity Distribution Chart (for the data-focused example)
            const activityCtx = document.getElementById('activityDistributionChart');
            if (activityCtx) {
                const activityChart = new Chart(activityCtx, {
                    type: 'doughnut',
                    data: {
                        labels: [
                            'Engineering & Building (42%)',
                            'Science Exploration (28%)',
                            'Math Problem Solving (15%)',
                            'Creative Arts (10%)',
                            'Other Activities (5%)'
                        ],
                        datasets: [{
                            data: [42, 28, 15, 10, 5],
                            backgroundColor: [
                                'rgba(79, 70, 229, 0.8)',  // Indigo
                                'rgba(16, 185, 129, 0.8)', // Green
                                'rgba(245, 158, 11, 0.8)', // Amber
                                'rgba(239, 68, 68, 0.8)',  // Red
                                'rgba(107, 114, 128, 0.8)' // Gray
                            ],
                            borderColor: [
                                'rgb(79, 70, 229)',
                                'rgb(16, 185, 129)',
                                'rgb(245, 158, 11)',
                                'rgb(239, 68, 68)',
                                'rgb(107, 114, 128)'
                            ],
                            borderWidth: 1,
                            hoverOffset: 15
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'right',
                                labels: {
                                    font: {
                                        size: 11
                                    },
                                    boxWidth: 15
                                }
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return context.label;
                                    }
                                }
                            }
                        },
                        cutout: '60%'
                    }
                });
            }
            
            // Add animation to data stats
            animateDataStats();
        }
        
        function animateDataStats() {
            const stats = document.querySelectorAll('.bg-blue-50, .bg-green-50, .bg-purple-50, .bg-yellow-50');
            
            stats.forEach(stat => {
                sr.reveal(stat, { 
                    interval: 200,
                    distance: '20px',
                    origin: 'bottom',
                    delay: 200
                });
            });
        }
    </script>
</body>
