    <!-- Animation and Interaction Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize ScrollReveal for fade-in animations
            const sr = ScrollReveal({
                origin: 'bottom',
                distance: '30px',
                duration: 1000,
                delay: 200,
                easing: 'ease-in-out'
            });
            
            // Apply to elements with reveal class
            sr.reveal('.reveal', { interval: 100 });
            
            // Different reveal directions for specific elements
            sr.reveal('.reveal-left', { 
                origin: 'left',
                distance: '60px',
                interval: 100 
            });
            
            sr.reveal('.reveal-right', { 
                origin: 'right', 
                distance: '60px',
                interval: 100 
            });
            
            // Highlight nav items based on scroll position
            const sections = document.querySelectorAll('section[id]');
            const navLinks = document.querySelectorAll('nav a[href^="#"]');
            
            window.addEventListener('scroll', function() {
                let current = '';
                const offset = 150;
                
                sections.forEach(section => {
                    const sectionTop = section.offsetTop - offset;
                    const sectionHeight = section.offsetHeight;
                    
                    if (window.scrollY >= sectionTop && window.scrollY < sectionTop + sectionHeight) {
                        current = section.getAttribute('id');
                    }
                });
                
                navLinks.forEach(link => {
                    link.classList.remove('text-blue-600', 'bg-blue-50');
                    
                    if (link.getAttribute('href').substring(1) === current) {
                        link.classList.add('text-blue-600', 'bg-blue-50');
                    }
                });
            });
            
            // Animated counter for premium spots counter
            const premiumCounters = document.querySelectorAll('.animate-pulse');
            
            // Make nav transparent on top and opaque when scrolled
            const nav = document.querySelector('nav');
            
            window.addEventListener('scroll', function() {
                if (window.scrollY > 10) {
                    nav.classList.add('bg-white');
                    nav.classList.remove('bg-transparent');
                } else {
                    nav.classList.remove('bg-white');
                    nav.classList.add('bg-transparent');
                }
            });
            
            // Initialize on page load
            if (window.scrollY > 10) {
                nav.classList.add('bg-white');
            } else {
                nav.classList.add('bg-transparent');
            }
            
            // Initialize Charts
            initializeCharts();
        });
        
        function initializeCharts() {
            // Learning Potential Chart
            const learningCtx = document.getElementById('learningChart').getContext('2d');
            const learningChart = new Chart(learningCtx, {
                type: 'bar',
                data: {
                    labels: ['Gaming', 'Social Media', 'YouTube', 'Mobile Apps', 'Web Browsing'],
                    datasets: [
                        {
                            label: 'Parent Perception',
                            data: [25, 20, 35, 30, 45],
                            backgroundColor: 'rgba(156, 163, 175, 0.5)',
                            borderColor: 'rgba(156, 163, 175, 1)',
                            borderWidth: 1
                        },
                        {
                            label: 'Actual Learning Value',
                            data: [65, 55, 80, 60, 75],
                            backgroundColor: 'rgba(79, 70, 229, 0.5)',
                            borderColor: 'rgba(79, 70, 229, 1)',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': ' + context.raw + '% learning value';
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            max: 100,
                            title: {
                                display: true,
                                text: 'Learning Value (%)'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Digital Activity Type'
